<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cws.webapp.hst.dao.HostDAO">
	<select id="findByKey" parameterType="HostDomain" resultType="HostDomain"
		useCache="true">
		select _I_D,NAME,TYPE,SN_NO,CREATE_DATE,REMARK,STATUS from HOST_INFO
		<where>
			and _I_D = #{ID}

		</where>
	</select>
	<select id="findByWhere" parameterType="HostDomain" resultType="HostDomain"
		useCache="true">
		select _I_D,NAME,TYPE,SN_NO,CREATE_DATE,REMARK,STATUS from HOST_INFO
		<where>
			<if test="ID !=null">
				and _I_D = #{ID}
			</if>
			<if test="name !=null">
				and NAME = #{name}
			</if>
			<if test="type !=null">
				and TYPE = #{type}
			</if>
			<if test="snNo !=null">
				and SN_NO = #{snNo}
			</if>
			<if test="createDate !=null">
				and CREATE_DATE = #{createDate}
			</if>
			<if test="remark !=null">
				and REMARK = #{remark}
			</if>
			<if test="status !=null">
				and STATUS = #{status}
			</if>
		</where>
	</select>
	<insert id="insert" parameterType="HostDomain" flushCache="true">
		insert into HOST_INFO(_I_D,NAME,TYPE,SN_NO,CREATE_DATE,REMARK,STATUS)
		values
		(#{ID},#{name},#{type},#{snNo},#{createDate},#{remark},#{status})
	</insert>
	<update id="update" parameterType="HostDomain" flushCache="true">
		update HOST_INFO
		<set>
			<if test="name !=null">
				NAME = #{name},
			</if>
			<if test="type !=null">
				TYPE = #{type},
			</if>
			<if test="snNo !=null">
				SN_NO = #{snNo},
			</if>
			<if test="createDate !=null">
				CREATE_DATE = #{createDate},
			</if>
			<if test="remark !=null">
				REMARK = #{remark},
			</if>
			<if test="status !=null">
				STATUS = #{status},
			</if>
		</set>
		<where>
			and _I_D = #{ID}

		</where>
	</update>
	<delete id="delete" parameterType="HostDomain" flushCache="true">
		delete from HOST_INFO
		<where>
			and _I_D = #{ID}

		</where>
	</delete>
</mapper>